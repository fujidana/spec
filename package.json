{
	"publisher": "fujidana",
	"name": "vscode-spec",
	"displayName": "spec Language Support",
	"description": "spec language support for Visual Studio Code",
	"version": "0.5.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"X-ray diffraction",
		"synchrotron",
		"instrument control",
		"data acquisition"
	],
	"activationEvents": [
		"onLanguage:spec"
	],
	"main": "./out/extension.js",
	"contributes": {
		"title": "spec",
		"languages": [
			{
				"id": "spec",
				"aliases": [
					"spec",
					"Spec",
					"SPEC"
				],
				"extensions": [
					".mac"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "spec",
				"scopeName": "source.spec",
				"path": "./syntaxes/spec.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "spec",
				"path": "./syntaxes/spec.snippets.json"
			}
		],
		"configuration": {
			"title": "spec",
			"properties": {
				"spec.helpDocumentVolume.hover": {
					"type": "string",
					"default": "full",
					"description": "Controls the volume of explanatory text in hovers, which is shown when the mouse cursor is on the symbol",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				},
				"spec.helpDocumentVolume.completionItem": {
					"type": "string",
					"default": "sentence",
					"description": "Controls the volume of explanatory text in auto-complete items, which is shown when the user types a symbol",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				},
				"spec.helpDocumentVolume.signatureHelp": {
					"type": "string",
					"default": "sentence",
					"description": "Controls the volume of explanatory text in signature help, which is shown when the user enters a function",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				},
				"spec.mnemonics.motor.labels": {
					"type": "array",
					"default": [],
					"description": "Specifies a string list of motor mnemonics",
					"items": {
						"type": "string",
						"pattern": "^[a-zA-Z_][a-zA-Z0-9_]{0,6}$"
					}
				},
				"spec.mnemonics.motor.descriptions": {
					"type": "array",
					"default": [],
					"description": "Specifies a string list of descriptions corresponding to motor mnemonics",
					"items": {
						"type": "string"
					}
				},
				"spec.parser.enableWorkspaceScan": {
					"type": "boolean",
					"default": false,
					"description": "Specifies whether syntax check and code navigation range over all files in the workspace"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm-run-all -s pegjs js-yaml:* compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"js-yaml:apiReference": "js-yaml ./src/spec.apiReference.yaml > ./syntaxes/spec.apiReference.json",
		"js-yaml:tmLanguage": "js-yaml ./src/spec.tmLanguage.yaml > ./syntaxes/spec.tmLanguage.json",
		"pegjs": "pegjs --cache --plugin ./node_modules/ts-pegjs/src/tspegjs -o src/grammar.ts src/spec.pegjs"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.14.18",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"js-yaml": "^3.13.1",
		"mocha": "^6.1.4",
		"npm-run-all": "^4.1.5",
		"ts-pegjs": "^0.2.6",
		"tslint": "^5.20.0",
		"typescript": "^3.6.3",
		"vscode-test": "^1.0.2"
	},
	"license": "SEE LICENSE IN LICENSE",
	"bugs": {
		"url": "https://github.com/fujidana/vscode-spec/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fujidana/vscode-spec.git"
	},
	"homepage": "https://github.com/fujidana/vscode-spec/blob/master/README.md"
}
