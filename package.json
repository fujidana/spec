{
	"publisher": "fujidana",
	"name": "spec",
	"displayName": "spec Language Support",
	"description": "spec language support for Visual Studio Code",
	"version": "0.1.1",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"X-ray diffraction",
		"synchrotron",
		"instrument control",
		"data acquisition"
	],
	"activationEvents": [
		"onLanguage:spec"
	],
	"main": "./out/extension.js",
	"contributes": {
		"title": "spec",
		"languages": [
			{
				"id": "spec",
				"aliases": [
					"spec",
					"Spec",
					"SPEC"
				],
				"extensions": [
					".mac"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "spec",
				"scopeName": "source.spec",
				"path": "./syntaxes/spec.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "spec",
				"path": "./syntaxes/spec.snippets.json"
			}
		],
		"configuration":{
			"title": "spec",
			"properties": {
				"spec.helpDocumentVolume.hover": {
					"type": "string",
					"default": "full",
					"description": "Volume of explanatory text in hovers, which is shown when the mouse cursor is on the symbol.",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				},
				"spec.helpDocumentVolume.completionItem": {
					"type": "string",
					"default": "sentence",
					"description": "Volume of explanatory text in auto-complete items, which is shown when the user types a symbol.",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				},
				"spec.helpDocumentVolume.signatureHelp": {
					"type": "string",
					"default": "sentence",
					"description": "Volume of explanatory text in signature help, which is shown when the user enters a function.",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm-run-all compile js-yaml:*",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"js-yaml:apiReference": "js-yaml src/spec.apiReference.yaml > syntaxes/spec.apiReference.json",
		"js-yaml:tmLanguage": "js-yaml src/spec.tmLanguage.yaml > syntaxes/spec.tmLanguage.json"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"js-yaml": "^3.13.1",
		"mocha": "^6.1.4",
		"npm-run-all": "^4.1.5",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	},
	"license": "SEE LICENSE IN LICENSE",
	"bugs": {
		"url": "https://github.com/fujidana/vscode-spec/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fujidana/vscode-spec.git"
	},
	"homepage": "https://github.com/fujidana/vscode-spec/blob/master/README.md"
}
