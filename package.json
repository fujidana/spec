{
	"publisher": "fujidana",
	"name": "vscode-spec",
	"displayName": "spec Language Support",
	"description": "spec language support for Visual Studio Code",
	"version": "1.1.4",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters"
	],
	"icon": "resources/icon.png",
	"keywords": [
		"X-ray diffraction",
		"synchrotron",
		"instrument control",
		"data acquisition",
		"multi-root ready"
	],
	"activationEvents": [
		"onLanguage:spec"
	],
	"main": "./out/extension.js",
	"contributes": {
		"title": "spec",
		"languages": [
			{
				"id": "spec",
				"aliases": [
					"spec",
					"Spec",
					"SPEC"
				],
				"extensions": [
					".mac"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "spec",
				"scopeName": "source.spec",
				"path": "./syntaxes/spec.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "spec",
				"path": "./syntaxes/spec.snippets.json"
			}
		],
		"commands": [
			{
				"command": "vscode-spec.openReferenceManual",
				"title": "Open Reference Manual",
				"category": "spec"
			},
			{
				"command": "vscode-spec.execSelectionInTerminal",
				"title": "Run Selction/Line in Active Terminal",
				"category": "spec"
			},
			{
				"command": "vscode-spec.execFileInTerminal",
				"title": "Run File in Active Terminal",
				"category": "spec",
				"icon": {
					"light": "./resources/light/play.svg",
					"dark": "./resources/dark/play.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "vscode-spec.openReferenceManual",
					"when": "resourceLangId == 'spec'"
				},
				{
					"command": "vscode-spec.execSelectionInTerminal",
					"when": "editorLangId == 'spec'"
				},
				{
					"command": "vscode-spec.execFileInTerminal",
					"when": "editorLangId == 'spec'"
				}
			],
			"explorer/context": [
				{
					"command": "vscode-spec.execFileInTerminal",
					"when": "resourceLangId == 'spec'",
					"group": "spec"
				}
			],
			"editor/title": [
				{
					"command": "vscode-spec.execFileInTerminal",
					"when": "editorLangId == 'spec'",
					"group": "navigation"
				}
			],
			"editor/context": [
				{
					"command": "vscode-spec.execSelectionInTerminal",
					"when": "editorTextFocus && editorLangId == 'spec'",
					"group": "spec"
				},
				{
					"command": "vscode-spec.execFileInTerminal",
					"when": "editorTextFocus && editorLangId == 'spec'",
					"group": "spec"
				}
			]
		},
		"keybindings": [
			{
				"command": "vscode-spec.execSelectionInTerminal",
				"key": "shift+enter",
				"when": "editorTextFocus && editorLangId == 'spec'"
			}
		],
		"configuration": {
			"title": "spec",
			"properties": {
				"vscode-spec.editor.hintVolume.hover": {
					"type": "string",
					"default": "full",
					"description": "Controls the volume of explanatory text in hovers, which is shown when the mouse cursor is on a symbol",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				},
				"vscode-spec.editor.hintVolume.completionItem": {
					"type": "string",
					"default": "sentence",
					"description": "Controls the volume of explanatory text in auto completion, which is shown when the user types a symbol",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				},
				"vscode-spec.editor.hintVolume.signatureHelp": {
					"type": "string",
					"default": "sentence",
					"description": "Controls the volume of explanatory text in signature help, which is shown when the user enters a function",
					"enum": [
						"sentence",
						"paragraph",
						"full"
					]
				},
				"vscode-spec.mnemonic.motor.labels": {
					"type": "array",
					"default": [],
					"description": "Specifies a string list of motor mnemonics",
					"items": {
						"type": "string",
						"pattern": "^[a-zA-Z_][a-zA-Z0-9_]{0,6}$"
					}
				},
				"vscode-spec.mnemonic.motor.descriptions": {
					"type": "array",
					"default": [],
					"description": "Specifies a string list of descriptions corresponding to motor mnemonics",
					"items": {
						"type": "string"
					}
				},
				"vscode-spec.mnemonic.counter.labels": {
					"type": "array",
					"default": [],
					"description": "Specifies a string list of counter mnemonics",
					"items": {
						"type": "string",
						"pattern": "^[a-zA-Z_][a-zA-Z0-9_]{0,6}$"
					}
				},
				"vscode-spec.mnemonic.counter.descriptions": {
					"type": "array",
					"default": [],
					"description": "Specifies a string list of descriptions corresponding to counter mnemonics",
					"items": {
						"type": "string"
					}
				},
				"vscode-spec.workspace.inclusiveFilePattern": {
					"type": "string",
					"default": "**/*.mac",
					"scope": "resource",
					"markdownDescription": "Specifies a glob pattern used to find files in a workspace. Symbols in pattern-matched files becomes available in code navigation. See [VS Code API](https://code.visualstudio.com/api/references/vscode-api#GlobPattern) for the syntax."
				},
				"vscode-spec.workspace.exclusiveFilePattern": {
					"type": "string",
					"default": "",
					"scope": "resource",
					"markdownDescription": "Specifies a glob pattern used to exclude files in a workspace from being parsed. See [VS Code API](https://code.visualstudio.com/api/references/vscode-api#GlobPattern) for the syntax."
				},
				"vscode-spec.workspace.diagnoseProblems": {
					"type": "boolean",
					"default": false,
					"scope": "resource",
					"description": "Controls whether diagnostic results of files in a workspace are listed in 'Problems' view. If disabled, only syntax problems of files opened by editors are listed."
				},
				"vscode-spec.command.filePathPrefixInTerminal": {
					"type": "string",
					"default": "",
					"scope": "resource",
					"description": "File path prefix used in \"Run File in Active Terminal\" command"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm-run-all -s pegjs js-yaml:* compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"js-yaml:apiReference": "js-yaml ./src/spec.apiReference.yaml > ./syntaxes/spec.apiReference.json",
		"js-yaml:tmLanguage": "js-yaml ./src/spec.tmLanguage.yaml > ./syntaxes/spec.tmLanguage.json",
		"pegjs": "pegjs --cache --plugin ./node_modules/ts-pegjs/src/tspegjs --extra-options-file ./src/pegconfig.json -o src/grammar.ts src/grammer.pegjs"
	},
	"dependencies": {
		"estraverse": "^5.2.0"
	},
	"devDependencies": {
		"@types/estraverse": "^5.1.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.12.67",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.4.1",
		"@typescript-eslint/parser": "^4.4.1",
		"eslint": "^7.11.0",
		"glob": "^7.1.6",
		"js-yaml": "^3.14.0",
		"mocha": "^8.1.3",
		"npm-run-all": "^4.1.5",
		"ts-pegjs": "^0.2.7",
		"typescript": "^4.0.3",
		"vscode-test": "^1.4.0"
	},
	"license": "SEE LICENSE IN LICENSE",
	"bugs": {
		"url": "https://github.com/fujidana/vscode-spec/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/fujidana/vscode-spec.git"
	},
	"homepage": "https://github.com/fujidana/vscode-spec/blob/master/README.md"
}
